<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.commands">
      <category
            name="Build Category"
            id="ironjacamar-eclipse.commands.category">
      </category>
      <command
            name="Validate"
            categoryId="ironjacamar-eclipse.commands.category"
            id="ironjacamar-eclipse.commands.validateCommand">
      </command>
      <command
            categoryId="ironjacamar-eclipse.commands.category"
            id="ironjacamar-eclipse.commands.deployCommand"
            name="Deploy">
         <commandParameter
               id="ironjacamar-eclipse.params.deployment"
               name="ironjacamar-eclipse.params.deployment"
               optional="true">
         </commandParameter>
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            commandId="ironjacamar-eclipse.commands.validateCommand"
            class="org.jboss.jca.eclipse.command.ValidateHandler">
         <activeWhen>
            <reference
                  definitionId="org.jboss.jca.eclipse.IronJacamarProjectNature.definition">
            </reference>
         </activeWhen>
      </handler>
      <handler
            commandId="ironjacamar-eclipse.commands.deployCommand"
            class="org.jboss.jca.eclipse.command.DeployHandler">
         <activeWhen>
            <reference
                  definitionId="org.jboss.jca.eclipse.IronJacamarProjectNature.definition">
            </reference>
         </activeWhen>
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="ironjacamar-eclipse.commands.validateCommand"
            contextId="org.eclipse.ui.contexts.window"
            sequence="M1+6"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration">
      </key>
      <key
            commandId="ironjacamar-eclipse.commands.deployCommand"
            contextId="org.eclipse.ui.contexts.window"
            sequence="M1+7"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration">
      </key>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="popup:org.eclipse.jdt.ui.PackageExplorer">
         <menu
               label="IronJacamar"
               mnemonic="M"
               id="ironjacamar-eclipse.popup.ironjacamar">
            <command
                  commandId="ironjacamar-eclipse.commands.validateCommand"
                  icon="icons/validation_icon_16px.gif"
                  id="ironjacamar-eclipse.menus.validateCommand"
                  mnemonic="V">
            </command>
            <menu
                  icon="icons/deploy_icon_16px.gif"
                  label="Deploy">
               <command
                     commandId="ironjacamar-eclipse.commands.deployCommand"
                     label="Deploy rar"
                     tooltip="Deploy the generated RAR file to IronJacamar server">
                  <parameter
                        name="ironjacamar-eclipse.params.deployment"
                        value="ironjacamar-eclipse.params.deploy-rar">
                  </parameter>
               </command>
               <command
                     commandId="ironjacamar-eclipse.commands.deployCommand"
                     label="Deploy -ra.xml"
                     tooltip="Generate the -ra.xml file and deploy it to IronJacamar server">
                  <parameter
                        name="ironjacamar-eclipse.params.deployment"
                        value="ironjacamar-eclipse.params.deploy-ra.xml">
                  </parameter>
               </command>
            </menu>
            <visibleWhen
                  checkEnabled="false">
               <reference
                     definitionId="org.jboss.jca.eclipse.IronJacamarProjectNature.definition">
               </reference>
            </visibleWhen>
         </menu>
      </menuContribution>
      <menuContribution
            locationURI="toolbar:org.eclipse.ui.main.toolbar?after=additions">
         <toolbar
               id="ironjacamar-eclipse.toolbars.buildToolbar">
            <command
                  commandId="ironjacamar-eclipse.commands.validateCommand"
                  icon="icons/validation_icon_16px.gif"
                  tooltip="Validate Ironjacamar rar file"
                  id="ironjacamar-eclipse.toolbars.validateCommand">
            </command>
            <command
                  commandId="ironjacamar-eclipse.commands.deployCommand"
                  icon="icons/deploy_icon_16px.gif"
                  id="ironjacamar-eclipse.toolbars.deployCommand"
                  style="pulldown"
                  tooltip="Deploy Ironjacamar project">
               <parameter
                     name="ironjacamar-eclipse.params.deployment"
                     value="ironjacamar-eclipse.params.deploy-rar">
               </parameter>
            </command>
         </toolbar>
      </menuContribution>
      <menuContribution
            locationURI="menu:ironjacamar-eclipse.toolbars.deployCommand">
         <command
               commandId="ironjacamar-eclipse.commands.deployCommand"
               label="Deploy rar"
               tooltip="Deploy the generated RAR file to IronJacamar server">
            <parameter
                  name="ironjacamar-eclipse.params.deployment"
                  value="ironjacamar-eclipse.params.deploy-rar">
            </parameter>
         </command>
         <command
               commandId="ironjacamar-eclipse.commands.deployCommand"
               label="Deploy -ra.xml"
               tooltip="Generate the -ra.xml file and deploy it to IronJacamar server">
            <parameter
                  name="ironjacamar-eclipse.params.deployment"
                  value="ironjacamar-eclipse.params.deploy-ra.xml">
            </parameter>
         </command>
      </menuContribution>
   </extension>

   <extension
         point="org.eclipse.ui.newWizards">
      <category
            name="Ironjcamar"
            id="org.jboss.jca.eclipse.wizards.category">
      </category>
      <wizard
            name="IronJacamar 1.1 project"
            icon="icons/ironjacamar_icon_64px.png"
            category="org.jboss.jca.eclipse.wizards.category"
            hasPages="true"     
            class="org.jboss.jca.eclipse.wizards.CodeGenWizard"
            id="org.jboss.jca.eclipse.wizards.CodeGenWizard"
            project="true">
      </wizard>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            class="org.jboss.jca.eclipse.preferences.IronJacamarPreferencePage"
            id="org.jboss.jca.eclipse.preferences.IronJacamarPreferencePage"
            name="IronJacamar">
      </page>
   </extension>
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer
            class="org.jboss.jca.eclipse.preferences.PreferenceInitializer">
      </initializer>
   </extension>
   <extension
         id="IronJacamarProjectNature"
         name="IronJacamar project nature"
         point="org.eclipse.core.resources.natures">
      <runtime>
         <run
               class="org.jboss.jca.eclipse.IronJacamarProjectNature">
         </run>
      </runtime>
   </extension>
   <extension
         point="org.eclipse.core.expressions.definitions">
      <definition
            id="org.jboss.jca.eclipse.IronJacamarProjectNature.definition">
            <with
                  variable="selection">
               <iterate
                     ifEmpty="false">
                  <adapt type="org.eclipse.core.resources.IResource">
                      <test
                            property="org.eclipse.core.resources.projectNature"
                            value="org.jboss.jca.eclipse.IronJacamarProjectNature">
                      </test>
                  </adapt>
               </iterate>
            </with>
      </definition>
   </extension>

</plugin>
