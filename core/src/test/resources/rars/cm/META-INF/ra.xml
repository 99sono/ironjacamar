<connector xmlns="http://java.sun.com/xml/ns/j2ee"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee
           http://java.sun.com/xml/ns/j2ee/connector_1_5.xsd"
           version="1.5">

   <vendor-name>JBoss, Red Hat</vendor-name>
   <eis-type>Pool resource adapter</eis-type>
   <resourceadapter-version>1.0</resourceadapter-version>
   <resourceadapter>
      <resourceadapter-class>org.jboss.jca.core.connectionmanager.rar.SimpleResourceAdapter</resourceadapter-class>

      <outbound-resourceadapter>
         <connection-definition>
            <managedconnectionfactory-class>org.jboss.jca.core.connectionmanager.rar.SimpleManagedConnectionFactory</managedconnectionfactory-class>
            <connectionfactory-interface>org.jboss.jca.core.connectionmanager.rar.SimpleConnectionFactory</connectionfactory-interface>
            <connectionfactory-impl-class>org.jboss.jca.core.connectionmanager.rar.SimpleConnectionFactoryImpl</connectionfactory-impl-class>
            <connection-interface>org.jboss.jca.core.connectionmanager.rar.SimpleConnection</connection-interface>
            <connection-impl-class>org.jboss.jca.core.connectionmanager.rar.SimpleConnectionImpl</connection-impl-class>
         </connection-definition>
         <connection-definition>
            <managedconnectionfactory-class>org.jboss.jca.core.connectionmanager.rar.SimpleManagedConnectionFactory1</managedconnectionfactory-class>
            <connectionfactory-interface>org.jboss.jca.core.connectionmanager.rar.SimpleConnectionFactory</connectionfactory-interface>
            <connectionfactory-impl-class>org.jboss.jca.core.connectionmanager.rar.SimpleConnectionFactoryImpl1</connectionfactory-impl-class>
            <connection-interface>org.jboss.jca.core.connectionmanager.rar.SimpleConnection</connection-interface>
            <connection-impl-class>org.jboss.jca.core.connectionmanager.rar.SimpleConnectionImpl1</connection-impl-class>
         </connection-definition>
         <transaction-support>NoTransaction</transaction-support>
         <reauthentication-support>false</reauthentication-support>
      </outbound-resourceadapter>
   </resourceadapter>
</connector>
